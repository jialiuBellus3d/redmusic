<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/account_setting"
    android:src="@drawable/background2">

    <ImageView
        android:id="@+id/sign_in_imv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/setting_menu_button_top_margin"
        android:layout_marginLeft="@dimen/button_left_right_margin"
        android:layout_marginRight="@dimen/button_left_right_margin"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/settingMenuButton"
            android:layout_width="@dimen/textview_left_margin"
            android:layout_height="@dimen/button_width_small"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/mainmenu_button" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:text="User Example"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/setting_image_top_margin"
                android:background="@drawable/circle_img" />

            <Button
                android:id="@+id/accountSettingChangeButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_medium"
                android:layout_marginTop="@dimen/setting_change_button_top_margin"
                android:layout_marginLeft="@dimen/button_left_right_margin_larger"
                android:layout_marginRight="@dimen/button_left_right_margin_larger"
                android:background="@drawable/round_button_empty"
                android:fontFamily="@font/montserrat"
                android:text="CHANGE PHOTO"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/button_left_right_margin_large_add_r"
                android:layout_marginTop="@dimen/setting_email_textview_top_margin"
                android:fontFamily="@font/montserrat"
                android:text="EMAIL"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/email_input"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_small"
                android:layout_marginLeft="@dimen/button_left_right_margin_large_add_r"
                android:layout_marginTop="@dimen/setting_email_top_margin"
                android:layout_marginRight="@dimen/button_left_right_margin_large_add_r"
                android:background="@drawable/underline"
                android:ems="10"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/settingOldPasswordTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/button_left_right_margin_large_add_r"
                android:layout_marginTop="@dimen/setting_old_password_textview_top_margin"
                android:fontFamily="@font/montserrat"
                android:text="OLD PASSWORD"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/settingOldPassword_input"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_small"
                android:layout_marginLeft="@dimen/button_left_right_margin_large_add_r"
                android:layout_marginTop="@dimen/setting_old_password_top_margin"
                android:layout_marginRight="@dimen/button_left_right_margin_large_add_r"
                android:background="@drawable/underline"
                android:inputType="textPassword"
                android:visibility="visible" />

            <TextView
                android:id="@+id/settingNewPasswordTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/button_left_right_margin_large_add_r"
                android:layout_marginTop="@dimen/setting_new_password_textview_top_margin"
                android:fontFamily="@font/montserrat"
                android:text="NEW PASSWORD"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/settingNewPassword_input"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_small"
                android:layout_marginLeft="@dimen/button_left_right_margin_large_add_r"
                android:layout_marginTop="@dimen/setting_new_password_top_margin"
                android:layout_marginRight="@dimen/button_left_right_margin_large_add_r"
                android:background="@drawable/underline"
                android:inputType="textPassword"
                android:visibility="visible" />

            <Button
                android:id="@+id/accountSettingSubmitButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="@dimen/setting_submit_button_top_margin"
                android:layout_marginLeft="@dimen/button_left_right_margin_large_add_r"
                android:layout_marginRight="@dimen/button_left_right_margin_large_add_r"
                android:background="@drawable/round_button"
                android:fontFamily="@font/montserrat"
                android:text="Submit"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="visible" />

        </RelativeLayout>

    </LinearLayout>
</FrameLayout>