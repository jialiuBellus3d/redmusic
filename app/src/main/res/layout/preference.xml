<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/preference"
    android:background="@drawable/background3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/preferenceGenresTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/textview_left_margin"
                android:layout_marginTop="@dimen/preference_genres_textview_top_margin"
                android:fontFamily="@font/montserrat"
                android:text="GENRES"
                android:textColor="@color/bright_blue"
                android:textSize="@dimen/preference_text_size" />

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/preference_genres_choice_height"
                android:layout_marginTop="@dimen/preference_genres_choice_top_margin"
                android:layout_marginLeft="@dimen/button_left_right_margin"
                android:layout_marginRight="@dimen/button_left_right_margin"
                >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <Button
                        android:id="@+id/jazzButton"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/preference_button_height"
                        android:layout_margin="@dimen/preference_button_padding"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/montserrat"
                        android:padding="@dimen/preference_button_padding"
                        android:text="Jazz"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/preference_text_size"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/blueButton"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/preference_button_height"
                        android:layout_margin="@dimen/preference_button_padding"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/montserrat"
                        android:padding="@dimen/preference_button_padding"
                        android:text="Blue"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/preference_text_size"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/hiphopButton"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/preference_button_height"
                        android:layout_margin="@dimen/preference_button_padding"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/montserrat"
                        android:padding="@dimen/preference_button_padding"
                        android:text="Hiphop"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/preference_text_size"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/electricButton"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/preference_button_height"
                        android:layout_margin="@dimen/preference_button_padding"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/montserrat"
                        android:padding="@dimen/preference_button_padding"
                        android:text="Electric"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/preference_text_size"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/popButton"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/preference_button_height"
                        android:layout_margin="@dimen/preference_button_padding"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/montserrat"
                        android:padding="@dimen/preference_button_padding"
                        android:text="Pop"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/preference_text_size"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/DubstepButton"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/preference_button_height"
                        android:layout_margin="@dimen/preference_button_padding"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/montserrat"
                        android:padding="@dimen/preference_button_padding"
                        android:text="Dubstep"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/preference_text_size"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/CountryButton"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/preference_button_height"
                        android:layout_margin="@dimen/preference_button_padding"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/montserrat"
                        android:padding="@dimen/preference_button_padding"
                        android:text="Country"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/preference_text_size"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/classicalButton"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/preference_button_height"
                        android:layout_margin="@dimen/preference_button_padding"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/montserrat"
                        android:padding="@dimen/preference_button_padding"
                        android:text="Classical"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/preference_text_size"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/rockButton"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/preference_button_height"
                        android:layout_margin="@dimen/preference_button_padding"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/montserrat"
                        android:padding="@dimen/preference_button_padding"
                        android:text="Rock"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/preference_text_size"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/relaxingButton"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/preference_button_height"
                        android:layout_margin="@dimen/preference_button_padding"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/montserrat"
                        android:padding="@dimen/preference_button_padding"
                        android:text="Relaxing"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/preference_text_size"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/danceButton"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/preference_button_height"
                        android:layout_margin="@dimen/preference_button_padding"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/montserrat"
                        android:padding="@dimen/preference_button_padding"
                        android:text="Dance"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/preference_text_size"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/exercisingButton"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/preference_button_height"
                        android:layout_margin="@dimen/preference_button_padding"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/montserrat"
                        android:padding="@dimen/preference_button_padding"
                        android:text="Exercising"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/preference_text_size"
                        android:textStyle="bold" />

                </TableRow>

            </TableLayout>

            <TextView
                android:id="@+id/preferenceTimelineTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/textview_left_margin"
                android:layout_marginTop="@dimen/preference_timeline_textview_top_margin"
                android:fontFamily="@font/montserrat"
                android:text="TIMELINE"
                android:textColor="@color/bright_blue"
                android:textSize="@dimen/preference_text_size" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/textview_left_margin"
                android:layout_marginRight="@dimen/textview_left_margin"
                android:layout_marginTop="@dimen/preference_timeline_slidebar_top_margin"/>

            <TextView
                android:id="@+id/preferenceTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/textview_left_margin"
                android:layout_marginTop="@dimen/preference_time_textview_top_margin"
                android:fontFamily="@font/montserrat"
                android:text="before 50's 60's 70's 80's 90's 2000 2010     now"
                android:textColor="@color/bright_blue"
                android:textSize="14sp" />

            <Button
                android:id="@+id/preferenceStartButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="@dimen/preference_start_button_top_margin"
                android:layout_marginLeft="@dimen/button_left_right_margin"
                android:layout_marginRight="@dimen/button_left_right_margin"
                android:background="@drawable/round_button"
                android:fontFamily="@font/montserrat"
                android:text="Start Red Music"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="visible" />

        </RelativeLayout>

    </LinearLayout>
</FrameLayout>