<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sign_in"
    android:src="@drawable/background2">

    <ImageView
        android:id="@+id/sign_in_imv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/restForgotTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/reset_forgot_textview_top_margin"
                android:fontFamily="@font/montserrat"
                android:text="@string/forgot_your_password"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/resetDescriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/textview_left_margin_large"
                android:layout_marginTop="@dimen/reset_description_textview_top_margin"
                android:fontFamily="@font/montserrat"
                android:text="@string/forgot_description"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/resetEmailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/textview_left_margin"
                android:layout_marginTop="@dimen/reset_email_textview_top_margin"
                android:fontFamily="@font/montserrat"
                android:text="ENTER YOUR EMAIL"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/resetEmail_input"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginLeft="@dimen/button_left_right_margin"
                android:layout_marginTop="@dimen/reset_email_top_margin"
                android:layout_marginRight="@dimen/button_left_right_margin"
                android:background="@drawable/round_text_input"
                android:ems="10"
                android:inputType="textEmailAddress" />

            <Button
                android:id="@+id/resetSubmitButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="@dimen/reset_signin_button_top_margin"
                android:layout_marginLeft="@dimen/button_left_right_margin"
                android:layout_marginRight="@dimen/button_left_right_margin"
                android:background="@drawable/round_button"
                android:fontFamily="@font/montserrat"
                android:text="Submit"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="visible" />

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>