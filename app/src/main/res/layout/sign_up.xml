<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sign_up"
    android:src="@drawable/background2">

    <ImageView
        android:id="@+id/sign_in_imv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background3"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/signUpEmailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/textview_left_margin"
                android:layout_marginTop="@dimen/sign_up_email_textview_top_margin"
                android:fontFamily="@font/montserrat"
                android:text="EMAIL"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/signUpEmail_input"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginLeft="@dimen/button_left_right_margin"
                android:layout_marginTop="@dimen/sign_up_email_top_margin"
                android:layout_marginRight="@dimen/button_left_right_margin"
                android:paddingLeft="@dimen/input_left_margin"
                android:paddingRight="@dimen/input_left_margin"
                android:textColor="@android:color/white"
                android:background="@drawable/round_text_input"
                android:ems="10"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/signUpPasswordTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/textview_left_margin"
                android:layout_marginTop="@dimen/sign_up_password_textview_top_margin"
                android:fontFamily="@font/montserrat"
                android:text="PASSWORD"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/signUpPassword_input"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="@dimen/sign_up_password_top_margin"
                android:layout_marginLeft="@dimen/button_left_right_margin"
                android:layout_marginRight="@dimen/button_left_right_margin"
                android:paddingLeft="@dimen/input_left_margin"
                android:paddingRight="@dimen/input_left_margin"
                android:textColor="@android:color/white"
                android:background="@drawable/round_text_input"
                android:inputType="textPassword"
                android:visibility="visible" />

            <TextView
                android:id="@+id/signUpConfirmPasswordTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/textview_left_margin"
                android:layout_marginTop="@dimen/sign_up_confirm_password_textview_top_margin"
                android:fontFamily="@font/montserrat"
                android:text="CONFIRM PASSWORD"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/signUpConfirmPassword_input"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="@dimen/sign_up_confirm_password_top_margin"
                android:layout_marginLeft="@dimen/button_left_right_margin"
                android:layout_marginRight="@dimen/button_left_right_margin"
                android:paddingLeft="@dimen/input_left_margin"
                android:paddingRight="@dimen/input_left_margin"
                android:textColor="@android:color/white"
                android:background="@drawable/round_text_input"
                android:inputType="textPassword"
                android:visibility="visible" />

            <Button
                android:id="@+id/signUpSubmitButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="@dimen/sign_up_submit_button_top_margin"
                android:layout_marginLeft="@dimen/button_left_right_margin"
                android:layout_marginRight="@dimen/button_left_right_margin"
                android:background="@drawable/round_button"
                android:fontFamily="@font/montserrat"
                android:text="SUBMIT"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="visible" />
        </RelativeLayout>

    </LinearLayout>
</FrameLayout>